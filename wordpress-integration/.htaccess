# WordPress .htaccess Configuration for SuperScan Integration
# Add this to your WordPress .htaccess file

RewriteEngine On

# Serve React app for /login path
RewriteCond %{REQUEST_URI} ^/login(/.*)?$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^login(/.*)?$ /login/index.html [L]

# WordPress rules (keep existing)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
